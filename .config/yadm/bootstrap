#!/bin/zsh

# Because Git submodule commands cannot operate without a work tree, they must
# be run from within $HOME (assuming this is the root of your dotfiles)
pushd "$HOME" > /dev/null

# Yadm generate alternate files
yadm alt > /dev/null

# Install required software and dependencies
echo -e "\033[32mInstall required softwares\033[0m"
source "$XDG_CONFIG_HOME"/yadm/bootstrap_install

# Sparse checkout.
yadm gitconfig core.sparseCheckout true
cat << EOF > "$HOME/.config/yadm/repo.git/info/sparse-checkout"
# generated by $0
/*
!README.md
!LICENSE
EOF

yadm checkout --quiet

# Decrypt files
echo -e "\033[32mDecrypt files\033[0m"
yadm decrypt > /dev/null

echo -e "\033[32mInit submodules\033[0m"
yadm submodule update --recursive --init > /dev/null

echo -e "\033[33mPlease refresh your configuration. Either:\033[0m"
echo -e "\033[33m- source ~/.zshrc\033[0m"
echo -e "\033[33m- reopen your terminal\033[0m"

# Return to the original directory
popd > /dev/null
