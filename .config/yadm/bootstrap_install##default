#!/bin/zsh

# Basic packages to install
packages=(
	'bat'
	'docker'
	'docker-compose'
	'dotacat'
	'gnupg'
	'gotop'
	'htop'
	'lsd'
	'neofetch'
	'rustup'
	'tmux'
	'wget'
)

# On a non headless machine
if [[ ! -z $DISPLAY ]]; then
	packages+=('clang' 'emacs' 'nodejs-intelephense' 'radare2' 'radare2-cutter')
fi

# Loop through the packages and install those that aren't found
for p in $packages;
	do yay -Qi ${p} > /dev/null || yay -S --noconfirm --quiet ${p}
done
