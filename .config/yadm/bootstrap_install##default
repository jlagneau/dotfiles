#!/bin/zsh

# Basic packages to install
packages=(
	'bat'
	'docker'
	'docker-compose'
	'dotacat'
	'gnupg'
	'gotop'
	'htop'
	'lsd'
	'neofetch'
	'tmux'
	'wget'
)

# extra packages to install on a desktop
extra_packages=(
	'clang'
	'emacs'
	'hub'
	'gitflow-avh'
	'nodejs-intelephense'
	'radare2'
	'radare2-cutter'
	'rustup'
	'symfony-cli'
)

if [[ ! -z $DISPLAY ]]; then
	packages+=(${extra_packages})
fi

# Loop through the packages and install those that aren't found
for p in $packages;
	do yay -Qi ${p} &> /dev/null || yay -S --noconfirm --quiet ${p}
done
